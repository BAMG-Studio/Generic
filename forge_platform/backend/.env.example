# ForgeTrace Platform Environment Variables
# Copy this to .env and fill in your values

# Application
ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql+asyncpg://forgetrace:forgetrace@localhost:5432/forgetrace_platform

# Redis
REDIS_URL=redis://localhost:6379/0

# OAuth (GitHub)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# AWS (for S3 artifact storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_SCANS=forgetrace-scans
S3_BUCKET_MODELS=forgetrace-models

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5050
MLFLOW_USERNAME=
MLFLOW_PASSWORD=
MLFLOW_EXPERIMENT_NAME=forgetrace-production

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@forgetrace.com
